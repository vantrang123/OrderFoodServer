<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <EditText
            android:id="@+id/edit_name_anf"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Menu Name"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#e3e3e3"
            android:textSize="34sp"/>

        <EditText
            android:id="@+id/edit_description_anf"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Description"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#e3e3e3"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/edit_price_anf"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="price"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#e3e3e3"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/edit_discount_anf"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#e3e3e3"
            android:textSize="24sp"/>

        <LinearLayout
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_select_anf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Select"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textAllCaps="false"
                android:background="@color/colorAccent"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn_upload_anf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="Upload"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textAllCaps="false"
                android:background="@color/colorAccent"
                android:layout_margin="8dp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>