    <ImageView
        android:id="@+id/iv_select_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/edit_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/image_select"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_cancell"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@id/iv_select_image"
        app:layout_constraintLeft_toLeftOf="@id/edit_name"
        app:layout_constraintRight_toLeftOf="@id/tv_post"/>

    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_post"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_marginBottom="@dimen/dimens_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@id/iv_select_image"
        app:layout_constraintRight_toRightOf="@id/edit_name"
        app:layout_constraintLeft_toRightOf="@id/tv_cancel"
        />

