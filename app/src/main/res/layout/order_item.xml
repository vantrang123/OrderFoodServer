<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_order_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorWhiteSmoke"
    android:paddingLeft="10dp"
    android:elevation="@dimen/dimens_5dp">
    <TextView
        android:id="@+id/order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/colorDarkGray"
        android:text="#111111"
        app:layout_constraintLeft_toLeftOf="@id/container_order_status"
        app:layout_constraintTop_toTopOf="@id/container_order_status"/>
    <TextView
        android:id="@+id/order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:text="Status"
        app:layout_constraintTop_toBottomOf="@id/order_id"
        app:layout_constraintLeft_toLeftOf="@id/container_order_status"/>
    <TextView
        android:id="@+id/order_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:text="123456789"
        app:layout_constraintTop_toBottomOf="@id/order_status"
        app:layout_constraintLeft_toLeftOf="@id/container_order_status"/>
    <TextView
        android:id="@+id/order_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textStyle="italic"
        android:text="Adress"
        app:layout_constraintTop_toBottomOf="@id/order_phone"
        app:layout_constraintLeft_toLeftOf="@id/container_order_status"
        />
</androidx.constraintlayout.widget.ConstraintLayout>