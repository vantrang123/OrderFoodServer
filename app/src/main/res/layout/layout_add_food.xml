<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimens_10dp">

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên món"
        android:inputType="text"
        android:textSize="17sp"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        android:inputType="text"
        android:textSize="17sp"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_name" />

    <EditText
        android:id="@+id/edt_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá"
        android:textSize="17sp"
        android:inputType="number"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        app:layout_constraintLeft_toLeftOf="@id/edit_description"
        app:layout_constraintTop_toBottomOf="@id/edit_description"
        />

    <EditText
        android:id="@+id/edt_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giảm giá"
        android:textSize="17sp"
        android:inputType="number"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        app:layout_constraintLeft_toLeftOf="@id/edit_description"
        app:layout_constraintTop_toBottomOf="@id/edt_price"
        />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:text="Kích cỡ:"
        android:textSize="17sp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="@id/edt_discount"
        app:layout_constraintTop_toBottomOf="@id/edt_discount"/>

    <net.igenius.customcheckbox.CustomCheckBox
        android:id="@+id/ckb_none"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:color_checked="@color/colorAccent"
        android:layout_marginTop="@dimen/dimens_10dp"
        app:layout_constraintRight_toLeftOf="@id/ckb_small"
        app:layout_constraintLeft_toRightOf="@id/tv_size"
        app:layout_constraintTop_toBottomOf="@id/edt_discount"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="none"
        app:layout_constraintTop_toBottomOf="@id/ckb_none"
        app:layout_constraintLeft_toLeftOf="@id/ckb_none"
        app:layout_constraintRight_toRightOf="@id/ckb_none"/>

    <net.igenius.customcheckbox.CustomCheckBox
        android:id="@+id/ckb_small"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:color_checked="@color/colorAccent"
        android:layout_marginTop="@dimen/dimens_10dp"
        app:layout_constraintRight_toLeftOf="@id/ckb_medium"
        app:layout_constraintLeft_toRightOf="@id/ckb_none"
        app:layout_constraintTop_toBottomOf="@id/edt_discount"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="small"
        app:layout_constraintTop_toBottomOf="@id/ckb_small"
        app:layout_constraintLeft_toLeftOf="@id/ckb_small"
        app:layout_constraintRight_toRightOf="@id/ckb_small"/>

    <net.igenius.customcheckbox.CustomCheckBox
        android:id="@+id/ckb_medium"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:color_checked="@color/colorAccent"
        android:layout_marginTop="@dimen/dimens_10dp"
        app:layout_constraintRight_toLeftOf="@id/ckb_large"
        app:layout_constraintLeft_toRightOf="@id/ckb_small"
        app:layout_constraintTop_toBottomOf="@id/edt_discount"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="medium"
        app:layout_constraintTop_toBottomOf="@id/ckb_medium"
        app:layout_constraintLeft_toLeftOf="@id/ckb_medium"
        app:layout_constraintRight_toRightOf="@id/ckb_medium"/>

    <net.igenius.customcheckbox.CustomCheckBox
        android:id="@+id/ckb_large"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:color_checked="@color/colorAccent"
        android:layout_marginTop="@dimen/dimens_10dp"
        app:layout_constraintLeft_toRightOf="@id/ckb_medium"
        app:layout_constraintTop_toBottomOf="@id/edt_discount"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="large"
        app:layout_constraintTop_toBottomOf="@id/ckb_large"
        app:layout_constraintLeft_toLeftOf="@id/ckb_large"
        app:layout_constraintRight_toRightOf="@id/ckb_large"/>


    <ImageView
        android:id="@+id/iv_select_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/tv_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/image_select"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_cancell"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@id/iv_select_image"
        app:layout_constraintLeft_toLeftOf="@id/edit_name"
        app:layout_constraintRight_toLeftOf="@id/tv_post"/>

    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_post"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_marginBottom="@dimen/dimens_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@id/iv_select_image"
        app:layout_constraintRight_toRightOf="@id/edit_name"
        app:layout_constraintLeft_toRightOf="@id/tv_cancel"
        />

</androidx.constraintlayout.widget.ConstraintLayout>