<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteSmoke"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/v_horizontal"/>

    <View
        android:id="@+id/v_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/dimens_20dp"
        app:layout_constraintTop_toBottomOf="@id/rv_shipper"
        app:layout_constraintBottom_toTopOf="@id/tv_cancel"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_cancell"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="@dimen/dimens_20dp"
        android:background="@drawable/bg_button_disable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_post"/>

    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_post"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="@dimen/dimens_20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_cancel"
        />

</androidx.constraintlayout.widget.ConstraintLayout>