<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimens_10dp">

    <TextView
        android:id="@+id/tv_title"
        android:text="Thêm mới món"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimens_10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên món"
        android:inputType="text"
        android:textSize="13sp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <EditText
        android:id="@+id/edt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả"
        android:inputType="text"
        android:textSize="13sp"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_name" />

    <EditText
        android:id="@+id/edt_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá"
        android:textSize="13sp"
        android:inputType="number"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        app:layout_constraintLeft_toLeftOf="@id/edt_description"
        app:layout_constraintTop_toBottomOf="@id/edt_description"
        />

    <EditText
        android:id="@+id/edt_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giảm giá"
        android:textSize="13sp"
        android:inputType="number"
        android:layout_marginHorizontal="@dimen/dimens_10dp"
        app:layout_constraintLeft_toLeftOf="@id/edt_description"
        app:layout_constraintTop_toBottomOf="@id/edt_price"
        />


    <ImageView
        android:id="@+id/iv_select_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/edt_discount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/image_select"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_cancell"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:background="@drawable/bg_button_disable"
        app:layout_constraintTop_toBottomOf="@id/iv_select_image"
        app:layout_constraintLeft_toLeftOf="@id/edt_name"
        app:layout_constraintRight_toLeftOf="@id/tv_post"/>

    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_post"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_marginBottom="@dimen/dimens_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_button_disable"
        app:layout_constraintTop_toBottomOf="@id/iv_select_image"
        app:layout_constraintRight_toRightOf="@id/edt_name"
        app:layout_constraintLeft_toRightOf="@id/tv_cancel"
        />

</androidx.constraintlayout.widget.ConstraintLayout>