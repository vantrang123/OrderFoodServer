<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:paddingHorizontal="@dimen/dimens_10dp"
    android:layout_marginTop="@dimen/dimens_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?selectableItemBackgroundBorderless">
    <TextView
        android:id="@+id/tv_shipper_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="trang shipper"
        android:layout_marginTop="@dimen/dimens_5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_shipper_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="091253452"
        android:layout_marginTop="@dimen/dimens_5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_shipper_name"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_shipper_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="14/213 apd"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:layout_marginBottom="@dimen/dimens_5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_shipper_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>